            <CheckBox x:Name="Chk3_Dr" Content="Smoothie" HorizontalAlignment="Left" Margin="185,78,0,0" VerticalAlignment="Top" FontSize="22" FontStyle="Italic" FontWeight="Bold" Checked="Chk3_Dr_Checked"  Unchecked="Chk3_Dr_Checked"/>
